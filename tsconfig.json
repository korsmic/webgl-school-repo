{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "types": ["node", "vite-plugin-glsl/ext"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@images/*": ["public/assets/images/*"],
      "@data/*": ["src/data/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@ts/*": ["src/ts/*"]
    }
  }
}
