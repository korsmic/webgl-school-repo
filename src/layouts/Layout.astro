---
import metadata from "@data/metadata";
import "@styles/main.scss";
import GoogleFont from "./components/GoogleFont.astro";
import Head from "./components/Head.astro";
import Info from "./components/Info.astro";

export interface Props {
  pageId?: string;
}
const { pageId = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <Head pageId={pageId} />
    <GoogleFont
      font="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700;900&family=Oswald:wght@400;700&display=swap"
    />
  </head>
  <body>
    {pageId !== "top" && <Info pageId={pageId} />}
    <div class="l_wrap" data-page={pageId}>
      <main class="l_main">
        <slot />
      </main>
    </div>
  </body>
</html>
